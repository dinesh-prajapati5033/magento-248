<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../Magento/Backend/etc/system_file.xsd">
       <system>
              <tab id="pixlogix" translate="label" sortOrder="0" >
                     <label>Pixlogix</label>
              </tab>
              <section id="pixlogix_items"
                 translate="label"
                 type="text"
                 sortOrder="900"
                 showInDefault="1"
                 showInWebsite="1"
                 showInStore="1">
            <label>Pixlogix Items</label>
            <tab>pixlogix</tab>
            <resource>Pixlogix_Items::config</resource>

            <!-- Group: General -->
            <group id="general"
                   translate="label"
                   type="text"
                   sortOrder="10"
                   showInDefault="1"
                   showInWebsite="1"
                   showInStore="1">
                <label>General Settings</label>

                <!-- Enable/Disable Module -->
                <field id="enable"
                       translate="label"
                       type="select"
                       sortOrder="10"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Enable Module</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <!-- List Page Image Size -->
                <field id="list_image_size"
                       translate="label comment"
                       type="text"
                       sortOrder="20"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>List Page Image Size (Width x Height)</label>
                    <comment>Example: 150x100</comment>
                </field>

                <!-- Detail Page Image Size -->
                <field id="detail_image_size"
                       translate="label comment"
                       type="text"
                       sortOrder="30"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Detail Page Image Size (Width x Height)</label>
                    <comment>Example: 1240x300</comment>
                </field>
            </group>
        </section>
    </system>
</config>