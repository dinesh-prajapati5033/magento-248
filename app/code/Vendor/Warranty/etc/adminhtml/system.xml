<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="warranty" translate="label" sortOrder="900" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Warranty Settings</label>
            <tab>sales</tab>
            <resource>Vendor_Warranty::config</resource>
            <group id="general" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Settings</label>
                <field id="pending_expiry_days" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Pending Registration Expiry (Days)</label>
                    <comment>Registrations older than this number of days will be auto-rejected</comment>
                    <validate>validate-number validate-greater-than-zero</validate>
                </field>
            </group>
        </section>
    </system>
</config>
