<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../lib/internal/Magento/Framework/ObjectManager/etc/config.xsd">

    <virtualType name="Vendor\Warranty\Model\ResourceModel\WarrantyRegistration\Grid\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">vendor_warranty_registration</argument>
            <argument name="resourceModel" xsi:type="string">Vendor\Warranty\Model\ResourceModel\WarrantyRegistration\Collection</argument>
        </arguments>
    </virtualType>

    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="vendor_warranty_registration_listing_data_source" xsi:type="string">
                    Vendor\Warranty\Model\ResourceModel\WarrantyRegistration\Grid\Collection
                </item>
            </argument>
        </arguments>
    </type>

    <preference for="Vendor\Warranty\Api\WarrantyRegistrationRepositoryInterface"
                type="Vendor\Warranty\Model\WarrantyRegistrationRepository" />

     <!-- Plugin for Warranty Registration model -->
    <type name="Vendor\Warranty\Model\WarrantyRegistrationRepository">
        <plugin name="vendor_warranty_serial_trim_uppercase"
                type="Vendor\Warranty\Plugin\WarrantyRegistrationRepositoryPlugin" />
    </type>
    
     <!-- Create Vendor Warranty Logger  -->
    <type name="Vendor\Warranty\Logger\WarrantyLogger">
        <arguments>
            <argument name="name" xsi:type="string">WarrantyLog</argument>
            <argument name="handlers" xsi:type="array">
                <item name="warranty_handler" xsi:type="object">Vendor\Warranty\Logger\Handler</item>
            </argument>
        </arguments>
    </type>

    <type name="Vendor\Warranty\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
</config>
