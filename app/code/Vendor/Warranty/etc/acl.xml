<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <!-- Root admin ACL node -->
            <resource id="Magento_Backend::admin">
                <!-- Link system configuration under Stores → Settings → Configuration -->
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Vendor_Warranty::config" title="Warranty Configuration" sortOrder="10" />
                        </resource>
                    </resource>
                </resource>
                <!-- Link Warranty menu under Sales section -->
                <resource id="Magento_Sales::sales"> 
                    <resource id="Magento_Sales::sales_operation" title="Operations" translate="title" sortOrder="10">
                        <!-- Sub-resource for the Registrations grid/menu -->
                        <resource id="Vendor_Warranty::registrations" title="Warranty Registrations" sortOrder="10" />
                    </resource> 
                </resource>   
            </resource>
        </resources>
    </acl>
</config>